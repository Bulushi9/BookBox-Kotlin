<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/lightRose</item>
        <item name="android:textColor">@color/lightRose</item>
    </style>

    <!-- Style for title text -->
    <style name="TitleText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for detail text -->
    <style name="DetailText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
    </style>

</resources>